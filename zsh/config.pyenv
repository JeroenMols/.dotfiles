# Configuration for PYENV

export PYENV_ROOT="$HOME/.pyenv"
export PYTHONPATH=$PLAID_PATH/python

# Lazy-load pyenv to speed up shell startup
# Add shims to PATH immediately (fast), but defer full init until first use
if [ -d "$PYENV_ROOT/shims" ]; then
    export PATH="$PYENV_ROOT/shims:$PYENV_ROOT/bin:$PATH"

    _load_pyenv() {
        unset -f pyenv
        eval "$(command pyenv init -)"
    }

    pyenv() { _load_pyenv && pyenv "$@"; }
fi

alias venvs='pyenv virtualenvs'
